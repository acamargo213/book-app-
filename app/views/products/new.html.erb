<h1>New Product</h1>

<% @product.errors.messages each do |name, message| %>
    <p class="bg-danger"><% name %> <%= message.first %></p>
    <%= name %> <%= message %>
<% end %>

<%= form_tag '/products' do %>
    <div class="form-group">
      <%= text_field_tag :name, '', placeholder: 'Name', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :description, '', placeholder: 'Description', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :picture_url, '', placeholder: "Picture URL", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :price, '', placeholder: 'Price', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Save', class: 'btn btn-default' %>
<% end %>