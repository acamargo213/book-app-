<h1>Books</h1>
<%= link_to 'New', '/books/new', class: 'btn btn-primary' %>

<% @books.each do |product| %>
<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object product-thumb" src="<%= book.picture_url %>" alt="...">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to book.name, "/book/#{book.id}" %></h4>
    <%= book.description %>
